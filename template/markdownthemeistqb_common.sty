% Hybrid Markdown + LaTeX text
\markdownSetup
  {
    fencedCode,
    rawAttribute,
    renderers = {
      inputRawInline = {
        \protect  % Enable the use of raw inlines in headings.
          \texorpdfstring
            { \protect \markdownEscape { #1 } \unskip }
            { (raw~#2~code) }
      }
    },
  }

% Paragraphs and line breaks
\markdownSetup
  {
    renderers = {
      hardLineBreak = { \\ },
    }
  }

% Lists
\markdownSetup
  {
    hashEnumerators,
    tightLists = false,
  }

% Subscripts and superscripts
\markdownSetup
